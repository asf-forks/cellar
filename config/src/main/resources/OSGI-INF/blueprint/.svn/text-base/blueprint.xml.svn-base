<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <!-- Cluster Configuration Listener -->
    <bean id="configurationListener" class="com.upstreamsystems.curry.cluster.config.LocalConfigurationListener">
        <property name="tracker" ref="tracker"/>
        <property name="producer" ref="eventProducer"/>
        <property name="clusterManager" ref="clusterManager"/>
        <property name="configurationAdmin" ref="configurationAdmin"/>
    </bean>

    <!-- Configuration Tracker -->
    <bean id="tracker" class="com.upstreamsystems.curry.cluster.config.ConfigurationTracker"/>

    <!-- Configuration Synchronizer -->
    <bean id="synchronizer" class="com.upstreamsystems.curry.cluster.config.ConfigurationSynchronizer"
          init-method="init" destroy-method="destroy" depends-on="eventHandler">
        <property name="configurationAdmin" ref="configurationAdmin"/>
        <property name="clusterManager" ref="clusterManager"/>
        <property name="producer" ref="eventProducer"/>
    </bean>

    <bean id="eventHandler" class="com.upstreamsystems.curry.cluster.config.ConfigurationEventHandler"
          init-method="init" destroy-method="destroy">
        <property name="tracker" ref="tracker"/>
        <property name="configurationAdmin" ref="configurationAdmin"/>
        <property name="clusterManager" ref="clusterManager"/>
    </bean>

    <!-- OSGi Services  & References -->
    <service ref="configurationListener" interface="org.osgi.service.cm.ConfigurationListener"/>
    <service ref="eventHandler" interface="com.upstreamsystems.curry.cluster.api.event.EventHandler">
        <service-properties>
            <entry key="managed" value="true"/>
         </service-properties>
    </service>
    <reference id="clusterManager" interface="com.upstreamsystems.curry.cluster.api.ClusterManager"/>
    <reference id="eventProducer" interface="com.upstreamsystems.curry.cluster.api.event.EventProducer"/>
    <reference id="configurationAdmin" interface="org.osgi.service.cm.ConfigurationAdmin"/>

</blueprint>
